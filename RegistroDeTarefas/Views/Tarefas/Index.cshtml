@{
    ViewData["Title"] = "Lista de Tarefas";
}

<h2>Lista de Tarefas</h2>

<form method="post" asp-action="Adicionar" class="mb-3">
    <div class="form-group">
        <label>Nome da Tarefa:</label>
        <input type="text" name="nome" class="form-control" />
    </div>
    <div class="form-group">
        <label>Importância:</label>
        <input type="text" name="importancia" class="form-control" />
    </div>
    <div>
        <input type="submit" value="Adicionar" class="btn btn-success" />
    </div>
</form>

<ul class="list-group">
    @foreach (var tarefa in Model)
    {
        <li class="list-group-item">
            <strong>@tarefa.NomeTarefa</strong> - @tarefa.ImportanciaDaTarefa
            <form method="post" asp-action="       Remover" class="d-inline">
                <input type="hidden" name="id" value="@tarefa.Id" />
                <input type="submit" value="Remover" class="btn btn-danger btn-sm" />
            </form>
        </li>
    }
</ul>

<a href="@Url.Action("Logout", "Usuario")" class="btn btn-warning mt-3">Sair</a>