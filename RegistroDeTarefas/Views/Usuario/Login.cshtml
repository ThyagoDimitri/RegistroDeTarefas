@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form method="post">
    <div>
        <label>Login:</label>
        <input type="text" name="login" class="form-control" />
    </div>
    <div>
        <label>Senha:</label>
        <input type="password" name="senha" class="form-control" />
    </div>
    <div>
        <input type="submit" value="Entrar" class="btn btn-primary" />
    </div>
    <p>@ViewBag.Message</p>
</form>

<p>Não tem uma conta? <a href="@Url.Action("Registrar", "Usuario")">Registre-se aqui</a></p>